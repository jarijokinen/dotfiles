#!/bin/bash

set -e

echo 'Installing Docker...'

su -c "curl -fsSL https://download.docker.com/linux/debian/gpg | apt-key add - ; echo deb [arch=amd64] https://download.docker.com/linux/debian buster stable | tee /etc/apt/sources.list.d/docker.list ; apt-get update ; apt-get -qy install docker-ce docker-ce-cli containerd.io ; adduser $USER docker"

exit 0
