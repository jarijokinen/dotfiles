#!/bin/bash

set -e

package_path=$HOME/.rvm

if [[ -x "$package_path/bin/rvm" ]]; then
  installed=1
  echo "Updating..."
  rvm get stable
else
  installed=0
  echo "Installing..."
  gpg --keyserver hkp://keys.gnupg.net \
    --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3  
  \curl -sSL https://get.rvm.io | bash -s stable
  rvm autolibs 2
fi

exit 0
